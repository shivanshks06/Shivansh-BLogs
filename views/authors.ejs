<%- include("partials/header.ejs") %>

<div style="background-image: url(./assests/images/bg-2.jpg);">
  <div class="w-3/4 h-auto mx-auto items-center flex flex-col gap-2 p-4 text-amber-50">
    <h1 class="text-2xl">Authors</h1>
    <img class="h-60 w-auto" src="./assests/images/author.png" alt="author">

    <div class="w-3/4 flex flex-col gap-4">
      <% authors.forEach(element => { %>
        <div class="border border-amber-50 rounded-xl p-4">
          <h2 class="font-bold text-xl"><%= element.name %></h2>
          <p class="italic">Contact: <%= element.contact %></p>
        </div>
      <% }); %>
    </div>
  </div>
</div>

<%- include("partials/footer.ejs") %>
