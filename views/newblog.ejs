<%- include("partials/header.ejs") %>

<div>
  <div style="background-image: url(./assests/images/bg-2.jpg);" class="bg-cover bg-center min-h-screen">
    <div class="w-full max-w-2xl mx-auto items-center flex flex-col gap-4 p-6 text-amber-50">
      <h1 class="font-bold text-3xl mb-4">Create a New Blog</h1>

      <form action="/submit" method="post" class="w-full bg-slate-900/70 p-6 rounded-2xl shadow-lg">
        <!-- Title -->
        <div class="mb-4 flex flex-col">
          <label for="title" class="mb-1 font-semibold">Title</label>
          <input
            class="border border-amber-50 bg-transparent rounded-xl p-2 focus:outline-none focus:ring-2 focus:ring-amber-400"
            type="text" id="title" name="title" required>
        </div>

        <!-- Content -->
        <div class="mb-4 flex flex-col">
          <label for="content" class="mb-1 font-semibold">Content</label>
          <textarea
            class="border border-amber-50 bg-transparent rounded-xl p-2 focus:outline-none focus:ring-2 focus:ring-amber-400 h-32 resize-none"
            id="content" name="content" required></textarea>
        </div>

        <!-- Author -->
        <div class="mb-4 flex flex-col">
          <label for="author" class="mb-1 font-semibold">Author</label>
          <input
            class="border border-amber-50 bg-transparent rounded-xl p-2 focus:outline-none focus:ring-2 focus:ring-amber-400"
            type="text" id="author" name="author" required>
        </div>

        <!-- Contact -->
        <div class="mb-4 flex flex-col">
          <label for="contact" class="mb-1 font-semibold">Contact</label>
          <input
            class="border border-amber-50 bg-transparent rounded-xl p-2 focus:outline-none focus:ring-2 focus:ring-amber-400"
            type="text" id="contact" name="contact" required>
        </div>

        <!-- Submit -->
        <div class="flex justify-center">
          <button
            class="mb-2 bg-amber-50 text-slate-900 rounded-xl px-6 py-2 font-semibold hover:bg-amber-400 transition">
            Submit
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include("partials/footer.ejs") %>
